@{
    Layout = null;
    ViewData["Title"] = "Detalle de Solicitud";
}

@model GestionBecas.Models.DetalleSolicitud

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Becas CUC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .info-card {
            margin-bottom: 20px;
            border-left: 4px solid #0d6efd;
        }

        .documento-presente {
            color: #198754;
        }

        .documento-faltante {
            color: #dc3545;
        }

        .documento-incorrecto {
            color: #ffc107;
        }

        .badge-estado {
            font-size: 1rem;
            padding: 0.5em 0.75em;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="bi bi-award"></i> Becas CUC - Detalle de Solicitud
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosDashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosConvocatorias">
                            <i class="bi bi-megaphone"></i> Convocatorias
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="EmpleadosSolicitudes">
                            <i class="bi bi-file-earmark-text"></i> Solicitudes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosEvaluaciones">
                            <i class="bi bi-clipboard-check"></i> Evaluaciones
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="index">
                            <i class="bi bi-clipboard-check"></i> Volver al menu
                        </a>
                    </li>

                </ul>
                
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-file-earmark-text"></i> Detalle de Solicitud</h1>
            <div>
                <span class="badge badge-estado
                     @(Model.Estado == 1 ? "badge-pendiente" : "")
                     @(Model.Estado == 2 ? "badge-completa" : "")
                     @(Model.Estado == 3 ? "badge-incompleta" : "")
                     @(Model.Estado == 4 ? "badge-evaluacion" : "")
                     @(Model.Estado == 5 ? "bg-success" : "")
                     @(Model.Estado == 6 ? "bg-danger" : "")">
                    @switch (Model.Estado)
                    {
                        case 1:
                            <text>EN REVISIÓN</text>
                            break;
                        case 2:

                            <text>DOCUMENTACIÓN COMPLETA</text>
                            break;
                        case 3:

                            <text>FALTA DOCUMENTACIÓN</text>
                            break;
                        case 4:

                            <text>EN EVALUACIÓN</text>
                            break;
                        case 5:

                            <text>APROBADA</text>
                            break;
                        case 6:

                            <text>RECHAZADA</text>
                            break;
                    }
                </span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card info-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-person-vcard"></i> Información del Estudiante</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Nombre completo:</strong> @Model.NombreEstudiante</p>
                        <p><strong>Cédula:</strong> @Model.CedulaEstudiante</p>
                        <p><strong>Carnet:</strong> @Model.CarnetEstudiante</p>
                        <p><strong>Fecha nacimiento:</strong> @Model.FechaNacimiento.ToString("dd/MM/yyyy")</p>
                        <p><strong>Edad:</strong> @Model.Edad</p>
                        <p><strong>Género:</strong> @Model.Genero</p>
                        <p><strong>Estado civil:</strong> @Model.EstadoCivil</p>
                        <p><strong>Teléfono:</strong> @Model.Telefono</p>
                        <p><strong>Correo:</strong> @Model.Correo</p>
                    </div>
                </div>

                <div class="card info-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-house"></i> Información de Vivienda</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Dirección exacta:</strong> @Model.DireccionExacta</p>
                        <p><strong>Provincia:</strong> @Model.Provincia</p>
                        <p><strong>Cantón:</strong> @Model.Canton</p>
                        <p><strong>Distrito:</strong> @Model.Distrito</p>
                        <p><strong>Tipo de vivienda:</strong> @Model.TipoVivienda</p>
                        <p><strong>Metros cuadrados:</strong> @Model.MetrosCuadrados m²</p>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card info-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-book"></i> Información Académica</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Carrera:</strong> @Model.Carrera</p>
                                <p><strong>Nivel de carrera:</strong> @Model.NivelCarrera</p>
                                <p><strong>Colegio de procedencia:</strong> @Model.NombreColegio</p>
                                <p><strong>Tipo de institución:</strong> @Model.TipoInstitucion</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Convocatoria:</strong> @Model.NombreConvocatoria</p>
                                <p><strong>Tipo de beca solicitada:</strong> @Model.TipoBeca</p>
                                <p><strong>Fecha de solicitud:</strong> @Model.FechaSolicitud.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card info-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> Documentación</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @if (Model.Documentos != null && Model.Documentos.Any())
                            {
                                @foreach (var doc in Model.Documentos)
                                {
                                    <div class="col-md-6 mb-2">
                                        <i class="bi @(doc.Estado == 1 ? "bi-check-circle documento-presente" :
                                                                                 doc.Estado == 2 ? "bi-x-circle documento-faltante" :
                                                                                 "bi-exclamation-triangle documento-incorrecto")"></i>
                                @doc.NombreDocumento
                                @if (doc.Estado == 2)
                                        {
                                            <button class="btn btn-sm btn-outline-warning float-end">
                                                <i class="bi bi-envelope"></i> Solicitar
                                            </button>
                                        }
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-12 text-center text-muted">
                                    No se encontraron documentos asociados a esta solicitud
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="card info-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-people"></i> Ingresos Familiares</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Parentesco</th>
                                        <th>Ocupación</th>
                                        <th>Ingreso mensual</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ingreso in Model.IngresosFamiliares)
                                    {
                                        <tr>
                                            <td>@ingreso.NombreCompleto</td>
                                            <td>@ingreso.Parentesco</td>
                                            <td>@ingreso.Ocupacion</td>
                                            <td>₡@ingreso.IngresoMensual.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="card info-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-cash-stack"></i> Gastos Mensuales</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var gasto in Model.GastosMensuales)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="card-title">@gasto.NombreGasto</h6>
                                            <p class="card-text">₡@gasto.Monto.ToString("N2")</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="EmpleadosSolicitudes" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <div>
                        @if (Model.Estado == 2)
                        {
                            <button class="btn btn-success">
                                <i class="bi bi-clipboard-check"></i> Iniciar Evaluación
                            </button>
                        }
                        @if (Model.Estado == 3)
                        {
                            <button class="btn btn-warning">
                                <i class="bi bi-envelope"></i> Solicitar Documentos
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">Sistema de Gestión de Becas CUC &copy; @DateTime.Now.Year</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>