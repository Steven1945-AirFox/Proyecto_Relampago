@model GestionBecas.Models.EvaluacionViewModel




@if (Model == null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> El modelo es nulo. No se recibieron datos del controlador.
    </div>
}
else
{
    <div class="alert alert-info d-none">
        <strong>Debug:</strong> Modelo recibido correctamente.
        Solicitudes: @Model.Solicitudes.Count,
        Pendientes: @Model.SolicitudesPendientes
    </div>
}



@{
    Layout = null;
    ViewData["Title"] = "Evaluacion de Solicitudes";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Becas CUC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .table-responsive {
            max-height: 600px;
            overflow-y: auto;
        }

        .badge-pendiente {
            background-color: #ffc107;
            color: #000;
        }

        .badge-aprobado {
            background-color: #198754;
        }

        .badge-rechazado {
            background-color: #dc3545;
        }

        .badge-evaluacion {
            background-color: #0dcaf0;
            color: #000;
        }

        .filter-card {
            margin-bottom: 20px;
        }

        .evaluation-stats {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .progress {
            height: 25px;
        }

        .beca-0 {
            background-color: #198754;
            color: white;
        }

        .beca-1 {
            background-color: #0d6efd;
            color: white;
        }

        .beca-2 {
            background-color: #6f42c1;
            color: white;
        }

        .beca-3 {
            background-color: #fd7e14;
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="bi bi-award"></i> Becas CUC - Evaluaciones
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosDashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosConvocatorias">
                            <i class="bi bi-megaphone"></i> Convocatorias
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosSolicitudes">
                            <i class="bi bi-file-earmark-text"></i> Solicitudes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="EmpleadosEvaluaciones">
                            <i class="bi bi-clipboard-check"></i> Evaluaciones
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="index">
                            <i class="bi bi-clipboard-check"></i> Volver al menu
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-clipboard-check"></i> Evaluación de Solicitudes</h1>
            <div class="text-muted">Mostrando @Model.Solicitudes.Count de @Model.SolicitudesPendientes evaluaciones pendientes</div>
        </div>

        <div class="evaluation-stats">
            <div class="row">
                <div class="col-md-4">
                    <h5>Presupuesto Disponible</h5>
                    <div class="d-flex justify-content-between">
                        <span>₡@Model.PresupuestoTotal.ToString("N0")</span>
                        <span class="text-muted">100%</span>
                    </div>
                    <div class="progress mt-2">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 100%"></div>
                    </div>
                </div>
                <!-- Budget Assigned Section -->
                <div class="col-md-4">
                    <h5>Presupuesto Asignado</h5>
                    <div class="d-flex justify-content-between">
                        <span>₡@Model.PresupuestoAsignado.ToString("N0")</span>
                        <span class="text-muted">@Model.PresupuestoAsignadoPorcentaje.ToString("N0")%</span>
                    </div>
                    <div class="progress mt-2">
                        <div class="progress-bar bg-info" role="progressbar"
                             style="width: @Model.PresupuestoAsignadoPorcentaje.ToString("N0")%"></div>
                    </div>
                </div>

                <!-- Pending Requests Section -->
                <div class="col-md-4">
                    <h5>Solicitudes por Evaluar</h5>
                    <div class="d-flex justify-content-between">
                        <span>@Model.SolicitudesPendientes</span>
                        <span class="text-muted">de @Model.TotalSolicitudes</span>
                    </div>
                    <div class="progress mt-2">
                        <div class="progress-bar bg-warning" role="progressbar"
                             style="width: @Model.SolicitudesPendientesPorcentaje.ToString("N0")%"></div>
                    </div>
                </div>
                
            </div>
        </div>

        <div class="card filter-card">
            <div class="card-body">
                <form method="get" asp-action="EmpleadosEvaluaciones">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Carrera</label>
                            <select class="form-select" name="carrera">
                                <option value="">Todas las carreras</option>
                                <option value="Tecnologías de Información">Tecnologías de Información</option>
                                <option value="Electrónica">Electrónica</option>
                                <option value="Administración">Administración</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Tipo Beca</label>
                            <select class="form-select" name="tipoBeca">
                                <option value="">Todos los tipos</option>
                                <option value="0">Beca 0</option>
                                <option value="1">Beca 1</option>
                                <option value="2">Beca 2</option>
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Buscar</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Nombre o cédula" name="busqueda">
                                <button class="btn btn-primary" type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>

                        <div class="col-md-2 d-flex align-items-end">
                            <button class="btn btn-primary w-100" type="submit">
                                <i class="bi bi-funnel"></i> Filtrar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Solicitudes para Evaluación</h5>
                <div>
                    <button class="btn btn-sm btn-light me-2" id="btnExportar">
                        <i class="bi bi-download"></i> Exportar
                    </button>
                    <button class="btn btn-sm btn-light" id="btnImprimir">
                        <i class="bi bi-printer"></i> Imprimir
                    </button>
                </div>
            </div>



            @foreach (var s in Model.Solicitudes)
            {
                <div>@s.NombreEstudiante - @s.EstadoSolicitud</div>
            }



            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Estudiante</th>
                                <th>Carrera</th>
                                <th>Promedio</th>
                                <th>Ingreso Per Cápita</th>
                                <th>Puntaje Socio</th>
                                <th>Puntaje Acad</th>
                                <th>Total</th>
                                <th>Recomendación</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var solicitud in Model.Solicitudes)
                            {
                                <tr>
                                    <td>B@(DateTime.Now.Year)-@solicitud.IdSolicitud.ToString("D3")</td>
                                    <td>@solicitud.NombreEstudiante</td>
                                    <td>@solicitud.Carrera</td>
                                    <td>@solicitud.Promedio.ToString("N1")</td>
                                    <td>₡@solicitud.IngresoPerCapita.ToString("N0")</td>
                                    <td>@solicitud.PuntajeSocioeconomico</td>
                                    <td>@solicitud.PuntajeAcademico</td>
                                    <td>@solicitud.PuntajeTotal.ToString("N1")</td>
                                    <td>
                                        <span class="badge @(solicitud.Recomendacion == "Beca 0" ? "beca-0" :
                                                                                              solicitud.Recomendacion == "Beca 1" ? "beca-1" :
                                                                                              solicitud.Recomendacion == "Beca 2" ? "beca-2" :
                                                                                              solicitud.Recomendacion == "Beca 3" ? "beca-3" : "bg-secondary")">
                                        @solicitud.Recomendacion
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(solicitud.EstadoSolicitud == "Aprobado" ? "badge-aprobado" :
                                                                   solicitud.EstadoSolicitud == "Rechazado" ? "badge-rechazado" :
                                                                   "badge-pendiente")">
                                        @solicitud.EstadoSolicitud
                                    </span>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary btn-evaluar"
                                            data-id="@solicitud.IdSolicitud"
                                            data-recomendacion="@solicitud.Recomendacion">
                                        <i class="bi bi-clipboard-check"></i> Evaluar
                                    </button>
                                    <button class="btn btn-sm btn-outline-success btn-asignar"
                                            data-id="@solicitud.IdSolicitud">
                                        <i class="bi bi-check-circle"></i> Asignar
                                    </button>
                                </td>
                            </tr>
                                                        }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <button class="btn btn-primary me-2" id="btnAprobarSeleccion">
                            <i class="bi bi-check-all"></i> Aprobar Selección
                        </button>
                        <button class="btn btn-outline-secondary" id="btnGenerarReporte">
                            <i class="bi bi-file-earmark-text"></i> Generar Reporte
                        </button>
                    </div>
                    <nav aria-label="Page navigation">
                        <ul class="pagination mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Anterior</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Siguiente</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para evaluación -->
    <div class="modal fade" id="evaluacionModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Evaluar Solicitud</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="formEvaluacion" method="post" asp-action="ProcesarEvaluacion">
                    <div class="modal-body">
                        <input type="hidden" id="solicitudId" name="idSolicitud">
                        <div class="mb-3">
                            <label class="form-label">Recomendación del Sistema:</label>
                            <input type="text" class="form-control" id="recomendacionSistema" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Decisión Final:</label>
                            <select class="form-select" name="accion" required>
                                <option value="">Seleccione una opción</option>
                                <option value="aprobar">Aprobar</option>
                                <option value="rechazar">Rechazar</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Comentarios:</label>
                            <textarea class="form-control" name="comentarios" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar Evaluación</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">Sistema de Gestión de Becas CUC &copy; @DateTime.Now.Year</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Mostrar modal de evaluación
        document.querySelectorAll('.btn-evaluar').forEach(btn => {
            btn.addEventListener('click', function() {
                const solicitudId = this.getAttribute('data-id');
                const recomendacion = this.getAttribute('data-recomendacion');

                document.getElementById('solicitudId').value = solicitudId;
                document.getElementById('recomendacionSistema').value = recomendacion;

                const modal = new bootstrap.Modal(document.getElementById('evaluacionModal'));
                modal.show();
            });
        });

        // Asignar beca directamente
        document.querySelectorAll('.btn-asignar').forEach(btn => {
            btn.addEventListener('click', function() {
                if (confirm('¿Está seguro que desea asignar esta beca según la recomendación del sistema?')) {
                    const solicitudId = this.getAttribute('data-id');
                    window.location.href = `/Home/ProcesarEvaluacion?idSolicitud=${solicitudId}&accion=aprobar`;
                }
            });
        });

        // Exportar a Excel
        document.getElementById('btnExportar').addEventListener('click', function() {
            alert('Exportando datos a Excel...');
            // Implementar lógica de exportación aquí
        });

        // Imprimir reporte
        document.getElementById('btnImprimir').addEventListener('click', function() {
            window.print();
        });

        // Aprobar selección
        document.getElementById('btnAprobarSeleccion').addEventListener('click', function() {
            alert('Funcionalidad de aprobación múltiple en desarrollo');
        });

        // Generar reporte
        document.getElementById('btnGenerarReporte').addEventListener('click', function() {
            alert('Generando reporte PDF...');
        });
    </script>
</body>
</html>