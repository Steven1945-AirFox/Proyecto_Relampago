@model List<GestionBecas.Models.Convocatoria>
@{
    ViewData["Title"] = "Gestión de Convocatorias";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .badge-active {
            background-color: #198754;
        }

        .badge-inactive {
            background-color: #6c757d;
        }

        .badge-upcoming {
            background-color: #ffc107;
            color: #000;
        }

        .action-buttons .btn {
            margin-right: 5px;
        }

        .table-responsive {
            max-height: 70vh;
            overflow-y: auto;
        }
    </style>
</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="bi bi-award"></i> Becas CUC - Empleados
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="EmpleadosDashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosConvocatorias">
                            <i class="bi bi-megaphone"></i> Convocatorias
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosSolicitudes">
                            <i class="bi bi-file-earmark-text"></i> Solicitudes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosEvaluaciones">
                            <i class="bi bi-clipboard-check"></i> Evaluaciones
                        </a>
                    </li>
                    
                </ul>
                
            </div>
        </div>
    </nav>



    <div class="container mt-4">
        <!-- Encabezado y mensajes -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-megaphone"></i> Gestión de Convocatorias</h1>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#nuevaConvocatoriaModal">
                <i class="bi bi-plus-circle"></i> Nueva Convocatoria
            </button>
        </div>

        <!-- Tabla de convocatorias -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Listado de Convocatorias</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Cierre</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var convocatoria in Model)
                            {
                                <tr>
                                    <td>@convocatoria.Nombre</td>
                                    <td>@convocatoria.FechaInicio.ToString("dd/MM/yyyy")</td>
                                    <td>@convocatoria.FechaCierre.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (convocatoria.Estado == "Activa")
                                        {
                                            <span class="badge bg-success">@convocatoria.Estado</span>
                                        }
                                        else if (convocatoria.Estado == "Pendiente")
                                        {
                                            <span class="badge bg-warning text-dark">@convocatoria.Estado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@convocatoria.Estado</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary"
                                                onclick="editarConvocatoria(
                                                        @convocatoria.Id,
                                                        '@convocatoria.Nombre',
                                                        '@convocatoria.Descripcion',
                                                        '@convocatoria.FechaInicio.ToString("yyyy-MM-dd")',
                                                        '@convocatoria.FechaCierre.ToString("yyyy-MM-dd")',
                                                        '@convocatoria.TipoBeca',
                                                        '@convocatoria.Estado')">
                                            <i class="bi bi-pencil"></i> Editar
                                        </button>
                                        <a href="@Url.Action("VerConvocatoria", new { id = convocatoria.Id })"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                        <!-- Botón de eliminar -->
                                        <button class="btn btn-sm btn-outline-danger"
                                                onclick="confirmarEliminacion(@convocatoria.Id, '@convocatoria.Nombre')">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para nueva convocatoria -->
    <div class="modal fade" id="nuevaConvocatoriaModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Nueva Convocatoria</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="CrearConvocatoria" method="post">
                    <div class="modal-body">
                        <!-- Campos del formulario -->
                        @await Html.PartialAsync("_FormularioConvocatoria")
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal para editar convocatoria -->
    <div class="modal fade" id="editarConvocatoriaModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-pencil"></i> Editar Convocatoria</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="EditarConvocatoria" method="post">
                    <input type="hidden" name="Id" id="editId">
                    <div class="modal-body">
                        <!-- Campos del formulario (mismos que en creación) -->
                        @await Html.PartialAsync("_FormularioConvocatoria")
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal de confirmación para eliminar -->
    <div class="modal fade" id="confirmarEliminarModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Confirmar Eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar la convocatoria "<strong id="nombreConvocatoriaEliminar"></strong>"?</p>
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i> Advertencia: Esta acción también eliminará todas las solicitudes asociadas a esta convocatoria.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form method="post" asp-action="EliminarConvocatoria">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="convocatoriaIdEliminar">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Eliminar Convocatoria y Solicitudes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Función para editar convocatoria
        function editarConvocatoria(id, nombre, descripcion, fechaInicio, fechaCierre, tipoBeca, estado) {
            document.getElementById('editId').value = id;
            document.querySelector('#editarConvocatoriaModal [name="Nombre"]').value = nombre;
            document.querySelector('#editarConvocatoriaModal [name="Descripcion"]').value = descripcion;
            document.querySelector('#editarConvocatoriaModal [name="FechaInicio"]').value = fechaInicio;
            document.querySelector('#editarConvocatoriaModal [name="FechaCierre"]').value = fechaCierre;
            document.querySelector('#editarConvocatoriaModal [name="TipoBeca"]').value = tipoBeca;
            document.querySelector('#editarConvocatoriaModal [name="Estado"]').value = estado;

            // Mostrar el modal
            var modal = new bootstrap.Modal(document.getElementById('editarConvocatoriaModal'));
            modal.show();
        }

        // Función para confirmar eliminación
                function confirmarEliminacion(id, nombre) {
            // Mostrar el ID y nombre en el modal
            document.getElementById('convocatoriaIdEliminar').value = id;
            document.getElementById('nombreConvocatoriaEliminar').textContent = nombre;

            // Mostrar el modal
            var modal = new bootstrap.Modal(document.getElementById('confirmarEliminarModal'));
            modal.show();
        }
    </script>
</body>
</html>