@{
    Layout = null;
    ViewData["Title"] = "Gestión de Convocatorias";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Becas CUC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .table-responsive {
            max-height: 500px;
            overflow-y: auto;
        }

        .badge-active {
            background-color: #198754;
        }

        .badge-inactive {
            background-color: #6c757d;
        }

        .action-buttons .btn {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="bi bi-award"></i> Becas CUC - Convocatorias
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosDashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="EmpleadosConvocatorias">
                            <i class="bi bi-megaphone"></i> Convocatorias
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosSolicitudes">
                            <i class="bi bi-file-earmark-text"></i> Solicitudes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosEvaluaciones">
                            <i class="bi bi-clipboard-check"></i> Evaluaciones
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosBeneficiarios">
                            <i class="bi bi-people"></i> Beneficiarios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EmpleadosSeguimiento">
                            <i class="bi bi-graph-up"></i> Seguimiento
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> empleado@cuc.ac.cr
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Perfil</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-gear"></i> Configuración</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-megaphone"></i> Gestión de Convocatorias</h1>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#nuevaConvocatoriaModal">
                <i class="bi bi-plus-circle"></i> Nueva Convocatoria
            </button>
        </div>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="mb-0">Convocatorias Activas</h5>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Buscar convocatoria...">
                            <button class="btn btn-light" type="button">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Cierre</th>
                                <th>Estado</th>
                                <th>Solicitudes</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Becas Socioeconómicas 2023-II</td>
                                <td>01/10/2023</td>
                                <td>15/10/2023</td>
                                <td><span class="badge badge-active text-white">Activa</span></td>
                                <td>245</td>
                                <td class="action-buttons">
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Editar
                                    </button>
                                    <button class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> Ver
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>Becas Socioeconómicas 2023-I</td>
                                <td>01/03/2023</td>
                                <td>15/03/2023</td>
                                <td><span class="badge badge-inactive text-white">Finalizada</span></td>
                                <td>320</td>
                                <td class="action-buttons">
                                    <button class="btn btn-sm btn-outline-primary" disabled>
                                        <i class="bi bi-pencil"></i> Editar
                                    </button>
                                    <button class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> Ver
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>Becas Excelencia Académica 2023</td>
                                <td>01/08/2023</td>
                                <td>31/08/2023</td>
                                <td><span class="badge badge-inactive text-white">Finalizada</span></td>
                                <td>180</td>
                                <td class="action-buttons">
                                    <button class="btn btn-sm btn-outline-primary" disabled>
                                        <i class="bi bi-pencil"></i> Editar
                                    </button>
                                    <button class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> Ver
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Anterior</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Siguiente</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <!-- Modal para nueva convocatoria -->
    <div class="modal fade" id="nuevaConvocatoriaModal" tabindex="-1" aria-labelledby="nuevaConvocatoriaModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="nuevaConvocatoriaModalLabel">
                        <i class="bi bi-plus-circle"></i> Nueva Convocatoria
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="convocatoriaForm">
                        <div class="mb-3">
                            <label class="form-label">Título de la Convocatoria</label>
                            <input type="text" class="form-control" placeholder="Ej: Becas Socioeconómicas 2023-III" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            <textarea class="form-control" rows="4" placeholder="Describa los detalles de la convocatoria..." required></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Fecha de Inicio</label>
                                <input type="date" class="form-control" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Fecha de Cierre</label>
                                <input type="date" class="form-control" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tipo de Beca</label>
                            <select class="form-select" required>
                                <option value="">Seleccione un tipo</option>
                                <option value="socioeconomica">Socioeconómica</option>
                                <option value="excelencia">Excelencia Académica</option>
                                <option value="deportiva">Deportiva</option>
                                <option value="cultural">Cultural</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Documentos Requeridos</label>
                            <div class="border p-3 rounded">
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="docCedula">
                                    <label class="form-check-label" for="docCedula">Cédula de identidad</label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="docMatricula">
                                    <label class="form-check-label" for="docMatricula">Constancia de matrícula</label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="docNotas">
                                    <label class="form-check-label" for="docNotas">Certificación de notas</label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="docIngresos">
                                    <label class="form-check-label" for="docIngresos">Constancia de ingresos</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="docResidencia">
                                    <label class="form-check-label" for="docResidencia">Comprobante de residencia</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Convocatoria
                    </button>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer mt-auto py-3 bg-light fixed-bottom">
        <div class="container text-center">
            <span class="text-muted">Sistema de Gestión de Becas CUC &copy; @DateTime.Now.Year</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Ejemplo de script para manejar la interfaz
        document.addEventListener('DOMContentLoaded', function() {
            // Aquí puedes agregar interactividad si es necesario
        });
    </script>
</body>
</html>